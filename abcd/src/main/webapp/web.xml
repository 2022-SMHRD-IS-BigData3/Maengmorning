<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
    id="WebApp_ID" version="3.1">

    <display-name>Hproject</display-name>
    
    <servlet>
        <servlet-name>FrontController</servlet-name>
        <servlet-class>kr.mang.frontcontroller.FrontController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>메인.jsp</welcome-file>
    </welcome-file-list>
    <!-- 파일업로드 관련 설정 -->
    <servlet>
        <servlet-name>ProductInput</servlet-name>
        <servlet-class>kr.mang.frontcontroller.ProductInput</servlet-class>
        <multipart-config>
            <location>/uploads</location>
            <max-file-size>-1</max-file-size>
            <max-request-size>-1</max-request-size>
            <file-size-threshold>1024</file-size-threshold>
        </multipart-config>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>kr.mang.frontcontroller.ProductInput</servlet-name>
        <url-pattern>/uploads</url-pattern>
    </servlet-mapping>
    
</web-app>